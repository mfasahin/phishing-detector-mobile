<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_main_gradient"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="48dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_security_shield"
                app:tint="#FFFFFF"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phishing Detector"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.02"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secure your digital presence"
                android:textSize="14sp"
                android:textColor="#B0BEC5"
                android:layout_marginTop="4dp"
                android:letterSpacing="0.05"/>
        </LinearLayout>

        <!-- Main Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/inputCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#1A1A1A"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Toggle Group -->
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleGroup"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="32dp"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:checkedButton="@+id/btnUrlMode">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUrlMode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="URL"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/selector_toggle_text"
                        app:backgroundTint="@color/selector_toggle_bg"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:strokeWidth="1dp" 
                        app:strokeColor="#33FFFFFF"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnQrMode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="QR SCAN"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/selector_toggle_text"
                        app:backgroundTint="@color/selector_toggle_bg"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:strokeWidth="1dp"
                        app:strokeColor="#33FFFFFF"/>
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <!-- URL Input Layout -->
                <LinearLayout
                    android:id="@+id/urlInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="https://example.com"
                        app:hintTextColor="#FFFFFF"
                        app:boxStrokeColor="#FFFFFF"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeWidthFocused="4dp"
                        app:endIconMode="clear_text"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/urlEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:inputType="textUri"
                            android:padding="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/checkButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginTop="24dp"
                        android:text="Analyze Risk"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_button_red"
                        app:backgroundTint="@null"
                        app:cornerRadius="16dp"
                        app:elevation="8dp"/>
                </LinearLayout>

                <!-- QR Scan Layout -->
                <LinearLayout
                    android:id="@+id/qrInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:gravity="center"
                    android:paddingVertical="16dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_security_shield" 
                        app:tint="#4DD0E1"
                        android:alpha="0.8"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to open camera"
                        android:textColor="#B0BEC5"
                        android:textSize="14sp"
                        android:layout_marginBottom="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/scanButtonMain"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="Open Scanner"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_button_red"
                        app:backgroundTint="@null"
                        app:icon="@drawable/ic_security_shield"
                        app:iconGravity="textStart"
                        app:iconTint="#FFFFFF"
                        app:cornerRadius="16dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Gauge View - Positioned below card -->
        <com.example.phishing_detector_mobile.GaugeView
            android:id="@+id/gaugeView"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="32dp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/inputCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Result Card - Positioned below gauge -->
        <androidx.cardview.widget.CardView
            android:id="@+id/resultCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="#222222"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/gaugeView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/resultTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Result"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#FFFFFF" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="#33FFFFFF" />

                <!-- Details in a compact grid/list -->
                <TextView
                    android:id="@+id/detailSslTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SSL: Checking..."
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#CCCCCC"
                    android:paddingVertical="2dp"/>

                <TextView
                    android:id="@+id/detailDomainTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Domain: Analysis..."
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#CCCCCC"
                    android:paddingVertical="2dp"/>

                <TextView
                    android:id="@+id/detailPatternTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pattern: Scanning..."
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#CCCCCC"
                    android:paddingVertical="2dp"/>
                    
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
